                        <input asp-for="distanciaComunidade" class="form-control" />
                        <span asp-validation-for="distanciaComunidade" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="id_cliente" class="control-label"></label>
                        <select asp-for="id_cliente" asp-items="@ViewBag.ItensClientes" class="form-control">
                            <option value="">Selecione...</option>
                        </select>
                        <span asp-validation-for="id_cliente" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="id_bairro" class="control-label"></label>
                        <select asp-for="id_bairro" asp-items="@ViewBag.ItensBairros" class="form-control">
                            <option value="">Selecione...</option>
                        </select>
                        <span asp-validation-for="id_bairro" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-8">
                        <label asp-for="id_predio" class="control-label"></label>
                        <select asp-for="id_predio" asp-items="@ViewBag.ItensPredios" class="form-control">
                            <option value="">Selecione...</option>
                        </select>
                        <span asp-validation-for="id_predio" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="id_apartamento" class="control-label"></label>
                        <select asp-for="id_apartamento" asp-items="@ViewBag.ItensApartamentos" class="form-control">
                        </select>
                        <span asp-validation-for="id_apartamento" class="text-danger"></span>
                    </div>
                </div>

                <label asp-for="fotoApartamento" class="control-label"></label>
                <div class="form-row">
                    <div class="form-group col-md-2">

                        <label class="fileinput button">
                            Escolher Foto
                            <input size="60" type="file" asp-for="fotoApartamento" accept="image/*" data-show-preview="false" />
                        </label>
                    </div>
                    <div class="form-group col-md-5">
                        <label id="lblApartamento" class="control-label lbl">@Model.fotoApartamento</label>
                    </div>
                </div>

                <label asp-for="fotoPredio" class="control-label"></label>
                <div class="form-row">
                    <div class="form-group col-md-2">

                        <label class="fileinput button">
                            Escolher Foto
                            <input size="60" type="file" asp-for="fotoPredio" accept="image/*" data-show-preview="false" />
                        </label>
                    </div>
                    <div class="form-group col-md-5">
                        <label id="lblPredio" class="control-label lbl">@Model.fotoPredio</label>
                    </div>
