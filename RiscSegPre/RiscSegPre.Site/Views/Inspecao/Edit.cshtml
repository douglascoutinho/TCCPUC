@model RiscSegPre.Domain.Entities.Inspecao

@{
    ViewData["Title"] = "Inspeção";
}



<style type="text/css">

    .fileinput {
        padding: 5px;
        background: aliceblue;
        display: table;
        color: black;
        border: 1px solid black;
    }

    .button {
        transition-duration: 0.4s;
    }

        .button:hover {
            background-color: #87CEFA; /* Green */
            color: black;
        }

    input[type="file"] {
        display: none;
    }

    .lbl {
        padding: 7px;
    }
</style>

<section>
    <div class="spacer">
        <h6>Atualizar: <b>@ViewData["Title"]</b></h6>
        <hr class="my-2">
    </div>
    <form asp-action="Edit" enctype="multipart/form-data" method="post">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#inspecao" role="tab" aria-controls="home" aria-selected="true">Inspeção</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#tecnico" role="tab" aria-controls="profile" aria-selected="false">Notas Meios Técnicos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#fisico" role="tab" aria-controls="contact" aria-selected="false">Notas Meios Físicos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#procedimento" role="tab" aria-controls="contact" aria-selected="false">Notas Procedimentos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#humano" role="tab" aria-controls="contact" aria-selected="false">Notas Meios Humanos</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="inspecao" role="tabpanel" aria-labelledby="home-tab">
                <div class="spacer"></div>
                <input type="hidden" asp-for="id_inspecao" />
                <input type="hidden" asp-for="id_notaMeioProtecaoTecnico" />
