                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="id_notaMeioProtecaoHumanoNavigation.gestaoServicoVigilancia" class="control-label"></label>
                        <input asp-for="id_notaMeioProtecaoHumanoNavigation.gestaoServicoVigilancia" class="form-control nota" />
                        <span asp-validation-for="id_notaMeioProtecaoHumanoNavigation.gestaoServicoVigilancia" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="id_notaMeioProtecaoHumanoNavigation.equipamentoMaterial" class="control-label"></label>
                        <input asp-for="id_notaMeioProtecaoHumanoNavigation.equipamentoMaterial" class="form-control nota" />
