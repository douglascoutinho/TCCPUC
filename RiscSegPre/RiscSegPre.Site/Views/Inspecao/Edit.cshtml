                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="row">
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-sm btn-primary" />
                    <a href='@Url.Action("Index", "Inspecao")' class="btn btn-sm btn-primary">Voltar</a>
                </div>
            </div>
        </div>
    </form>
</section>



@section scripts{

    <script type="text/javascript">

        $("#fotoApartamento").change(function () {

            var fileApartamento = $('#fotoApartamento')[0].files[0];
            if (fileApartamento) {

                $('#lblApartamento').text(fileApartamento.name);
            }
        });

        $("#fotoPredio").change(function () {

            var fileApartamento = $('#fotoPredio')[0].files[0];
            if (fileApartamento) {

                $('#lblPredio').text(fileApartamento.name);
            }
        });

        $(document).ready(function () {

            $('#id_predio').change(function () {

                //limpa seletc ESCRAVO
                $('#id_apartamento').empty();

		        //Guarda opção que foi selecionada no Select MESTRE
                $('#id_apartamento').append($('<option></option>').val("0").html('Selecione'));

                var x = document.getElementById("id_apartamento");
		        var option = document.createElement("option");

		        //Adiciona uma opção tipo Sslecione um Valor
		        //option.value = "0"
		        x.add(option);

		        //Mancada para forçar redraw - pode não ser necessário
                var element = document.getElementById('id_apartamento');
		        var n = document.createTextNode(' ');
		        var disp = element.style.display;
		        element.appendChild(n);
		        element.style.display = 'none';
		        setTimeout(function() {
			        element.style.display = disp;
			        n.parentNode.removeChild(n);
                }, 20);

		        $.ajax({
			        type: 'GET',
			        headers: {
				        'Accept': 'application/json',
				        'Content-Type': 'text/plain'
			        },
			        dataType: 'json',
                    url: "@(Url.Action("GetSelectApartamento", "Inspecao"))",
                    data: { "id": $('#id_predio').val() },
			        success: function(data) {
                        if (data != "") {

                            $('#id_apartamento').removeAttr('disabled');
                            callbackFunction(data); //IMPORTANTE
                        }
                        else {
                            $('#id_apartamento').attr('disabled', 'false');
                        }
			        }
		        });

                //Carrega o select ESCRAVO
		        function callbackFunction(resultData) {

			        var items = '<option value="0"><<Selecione>></option>';

			        $.each(resultData, function(i, apartamento) {

                        items += "<option value='" + apartamento.value + "'>" + apartamento.text + "</option>";
                        $("#id_apartamento").append("<option value='" + apartamento.value + "'>" + apartamento.text + "</option>");
			        });

                    $('#id_apartamento option:eq(' + 1 + ')').remove(); //retira branco
		        }
	        });
        });

    </script>
}