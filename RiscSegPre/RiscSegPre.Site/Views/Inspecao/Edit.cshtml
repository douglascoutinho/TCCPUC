                        <input asp-for="id_notaMeioProtecaoTecnicoNavigation.telemonitoramento" class="form-control nota" />
                        <span asp-validation-for="id_notaMeioProtecaoTecnicoNavigation.telemonitoramento" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="fisico" role="tabpanel" aria-labelledby="contact-tab">
                <div class="spacer"></div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="id_notaMeioProtecaoFisicoNavigation.sistemaDeteccaoIntruso" class="control-label"></label>
                        <input asp-for="id_notaMeioProtecaoFisicoNavigation.sistemaDeteccaoIntruso" class="form-control nota" />
                        <span asp-validation-for="id_notaMeioProtecaoFisicoNavigation.sistemaDeteccaoIntruso" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="id_notaMeioProtecaoFisicoNavigation.recursoSegurancaPerimetroExterno" class="control-label"></label>
                        <input asp-for="id_notaMeioProtecaoFisicoNavigation.recursoSegurancaPerimetroExterno" class="form-control nota" />
                        <span asp-validation-for="id_notaMeioProtecaoFisicoNavigation.recursoSegurancaPerimetroExterno" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="id_notaMeioProtecaoFisicoNavigation.meiosDesaceleracaoFrenagemVeiculo" class="control-label"></label>
                        <input asp-for="id_notaMeioProtecaoFisicoNavigation.meiosDesaceleracaoFrenagemVeiculo" class="form-control nota" />
